generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AgentInvocation {
  id                Int      @id @default(autoincrement())
  timestamp         DateTime @default(now())
  minutesSinceStart Int
  invocationCount   Int
  accountValue      Float
  availableCash     Float
  totalReturn       Float
  openPositions     Json
  toolCalls         Json?
  response          String
}

model Account {
  id             Int      @id @default(autoincrement())
  name           String
  totalReturn    Float    @default(0.0)
  initialCapital Float    @default(10000)
  availableCash  Float    @default(10000)
  accountValue   Float    @default(10000)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  positions Position[]
}

model Position {
  id         Int       @id @default(autoincrement())
  symbol     String
  side       String
  entryPrice Float
  exitPrice  Float?
  quantity   Float
  leverage   Int
  createdAt  DateTime  @default(now())
  closedAt   DateTime?
  pnl        Float     @default(0.0)
  isOpen     Boolean   @default(true)

  exit_plan ExitPLAN? @relation("PositionExitPlan")

  Account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId Int
}

model ExitPLAN {
  id                    Int    @id @default(autoincrement())
  profitTarget          Float
  stopLoss              Float
  invalidationCondition String

  positionId Int      @unique
  position   Position @relation("PositionExitPlan", fields: [positionId], references: [id], onDelete: Cascade)
}
